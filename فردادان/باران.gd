func آغازبازی():
	آویس("آغاز")
	$"تخته‌کلید".show()
	$"آب".show()
	$"آب/پویانمایی".play()
	$شمارش.hide()
	$سر/ایستاننده.disabled = false
	$"شمارشگر".start()


func بایست():
	آویس("دکمه")
	$ایستاده.visible = not $ایستاده.visible
	$"تخته‌کلید".visible = not $"تخته‌کلید".visible
	$"آب".visible = not $"آب".visible
	$"شمارشگر".paused = not $"شمارشگر".paused
	for هرقطره in قطرات:
		هرقطره.freeze = not هرقطره.freeze
		هرقطره.visible = not هرقطره.visible
	if $ایستاده.visible:
		$سر/ایستاننده.text = "  <  "
	else:
		$سر/ایستاننده.text = "  | |  "
	$ایستاده/امتیاز.text = str(امتیاز)


func برگرد():
	آویس("دکمه")
	get_tree().change_scene_to_file("res://صحنه‌ها/سرآغاز.tscn")


func آویس(متغیر):
	if متغیر == "درست":
		$آویس.stream = preload("res://جلوه آویسی/درست.ogg")
		$آویس.play()
	elif متغیر == "نادرست":
		$آویس.stream = preload("res://جلوه آویسی/نادرست.wav")
		$آویس.play()
	elif متغیر == "پیروزی":
		$آویس.stream = preload("res://جلوه آویسی/پیروزی۱.wav")
		$آویس.play()
	elif متغیر == "باخت":
		$آویس.stream = preload("res://جلوه آویسی/باخت.wav")
		$آویس.play()
	elif متغیر == "آغاز":
		$آویس.stream = preload("res://جلوه آویسی/آغاز.mp3")
		$آویس.play()
	elif متغیر == "دکمه":
		$آویس.stream = آویس‌های_دکمه.pick_random()
		$آویس.play()


func برخورد(پیکر: Node2D):
	قطرات.erase(پیکر)
	پیکر.queue_free()
	$"آب".scale *= 2
	جان -= 1
	if not جان:
		پایان_بازی()


func بنویس(نویسه):
	if نویسه is int:
		نوشتار += str(نویسه)
		$"تخته‌کلید/شماره".text += شمارگان[نویسه]
		return
	elif نویسه is String:
		if نویسه == ".":
			نوشتار += نویسه
			$"تخته‌کلید/شماره".text += شمارگان[نویسه]
		elif نویسه == "-" and نوشتار.begins_with("-"):
			نوشتار = نوشتار.replace("-", "")
			$"تخته‌کلید/شماره".text = $"تخته‌کلید/شماره".text.replace("-", "")
		elif نویسه == "-" and not نوشتار.begins_with("-"):
			نوشتار = "-" + نوشتار
			$"تخته‌کلید/شماره".text = "-" + $"تخته‌کلید/شماره".text
		return
	if نویسه:
		for هرقطره in قطرات:
			if snapped(float(نوشتار), .01) == هرقطره.پاسخ:
				آویس("درست")
				امتیاز += هرقطره.ضریب_امتیاز
				if هرقطره.کار == کارها["ضرب"]:
					امتیاز_ضرب += 1
				if هرقطره.کار == کارها["تقسیم"]:
					امتیاز_تقسیم += 1
				هرقطره.free()
				قطرات.erase(هرقطره)
				$"سر/امتیاز".text = str(امتیاز)
	نوشتار = ""
	$"تخته‌کلید/شماره".text = ""
	if امتیاز_تقسیم == کران_بالای_تقسیم:
		کران_بالای_تقسیم *= 2
	if امتیاز_ضرب == کران_بالای_ضرب - int(کران_بالای_ضرب / 10):
		کران_بالای_ضرب *= 2
	if امتیاز == int(کران_بالای_جمع / 2):
		کران_بالای_جمع *= 3
	if not امتیاز % 5 and کران_پایین_تندی_بارش >= 1:
		کران_بالای_تندی_بارش -= .2
	if کران_پایین_تندی_بارش - کران_بالای_تندی_بارش < 1:
		کران_پایین_تندی_بارش -= .2
	
